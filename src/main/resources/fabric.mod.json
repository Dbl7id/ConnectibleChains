{
  "schemaVersion": 1,
  "id": "connectiblechains",
  "version": "${version}",

  "name": "Connectible Chains",
  "description": "A 'Simple' mod (not to make ._.) that allow the chains to be connected to 2 fences.",
  "authors": [
    "legoatoom"
  ],
  "contact": {
    "homepage": "https://github.com/legoatoom/ConnectibleChains",
    "sources": "https://github.com/legoatoom/ConnectibleChains"
  },

  "license": "GPL-3.0",
  "icon": "assets/connectiblechains/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.github.legoatoom.connectiblechains.ConnectibleChains"
    ],
    "client": [
      "com.github.legoatoom.connectiblechains.client.ClientInitializer"
    ]
  },
  "mixins": [
    "connectiblechains.mixins.json"
  ],
  "accessWidener" : "connectiblechains.accesswidener",

  "depends": {
    "fabricloader": ">=0.7.4",
    "fabric": "*",
    "minecraft": "1.16.x"
  },
  "suggests": {
    "flamingo": "*"
  }
}
